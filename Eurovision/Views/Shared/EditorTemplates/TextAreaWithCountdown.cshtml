<span style="display:inline-block;vertical-align:top;">
<span style="display:block">
@Html.TextAreaFor(model => model, new { style = "display:inline;", cols = "30", data_limit_input = "" + Html.GetMaxLength(model => model) + "" })<br />
<span>0 characters used</span>
</span>
</span>
<script type="text/javascript">

    $("textarea[data-limit-input]").keyup(function (e) {
        var $this = $(this),
        charLength = $this.val().length,
        charLimit = $this.attr("data-limit-input");
        // Displays count
        $this.siblings("span").html(charLength + " of " + charLimit + " characters used");
        // Alert when max is reached
        if ($this.val().length > charLimit) {
            $this.siblings("span").html("<strong>You may only have up to " + charLimit + " characters.</strong>");
        }
    });

    $("textarea[data-limit-input]").keydown(function (e) {
        var $this = $(this),
        charLength = $this.val().length,
        charLimit = $this.attr("data-limit-input");
        if ($this.val().length > charLimit && e.keyCode !== 8 && e.keyCode !== 46) {
            return false;
        }
    });
</script>
